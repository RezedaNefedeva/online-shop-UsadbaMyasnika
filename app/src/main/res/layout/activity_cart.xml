<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/top_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/top_card" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_card"
        android:layout_marginBottom="75dp"
        android:layout_marginHorizontal="12dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lines3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/header_pic"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/main_page_recept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-60dp"
                android:fontFamily="@font/roboto_slab_bold"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/cart"
                android:textColor="@color/red"
                android:textSize="32dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/tabbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:elevation="40dp"
        android:background="@drawable/tabbar_background"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/house"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:paddingVertical="4dp"
            android:paddingHorizontal="11dp"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/house_img"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/house"
                android:contentDescription="@string/house"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/house_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/house"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/catalog"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:paddingVertical="4dp"
            android:paddingHorizontal="11dp"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/catalog_img"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/catalog"
                android:contentDescription="@string/catalog"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/catalog_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/catalog"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cart"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:paddingVertical="4dp"
            android:paddingHorizontal="11dp"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/cart_img"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/red_cart"
                android:contentDescription="@string/cart"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/cart_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/cart"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/red"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recept"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:paddingVertical="4dp"
            android:paddingHorizontal="11dp"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/recept_img"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/recept"
                android:contentDescription="@string/recept"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/recept_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/recept"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:paddingVertical="4dp"
            android:paddingHorizontal="11dp"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/user"
                android:contentDescription="@string/user"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/profile_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/user"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>