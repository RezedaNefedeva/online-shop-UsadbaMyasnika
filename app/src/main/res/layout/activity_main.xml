<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/top_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/top_card" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_card"
        android:layout_marginBottom="75dp"
        android:layout_marginHorizontal="12dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/header_pic" />

            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-60dp"
                android:fontFamily="@font/roboto_slab_bold"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/about"
                android:textColor="@color/red"
                android:textSize="32dp" />

            <ImageView
                android:id="@+id/about_img"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:src="@drawable/about_img"
                android:layout_marginTop="40sp"/>

            <TextView
                android:id="@+id/about_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:lineSpacingExtra="4sp"
                android:text="@string/about_text"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/lines2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/header_pic"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/main_page_catalog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-60dp"
                android:fontFamily="@font/roboto_slab_bold"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/catalog"
                android:textColor="@color/red"
                android:textSize="32dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="250dp"
                    android:layout_marginVertical="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="140dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pic1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/roboto_slab_bold"
                            android:gravity="center"
                            android:text="@string/kolbasa"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="250dp"
                    android:layout_marginVertical="20dp"
                    android:background="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="140dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pic2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/roboto_slab_bold"
                            android:gravity="center"
                            android:text="@string/meat"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="250dp"
                    android:layout_marginVertical="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="140dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pic3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/roboto_slab_bold"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/delicates"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="250dp"
                    android:layout_marginVertical="20dp"
                    android:background="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pic4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:fontFamily="@font/roboto_slab_bold"
                            android:gravity="center"
                            android:text="@string/pelmeni"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <Button
                android:id="@+id/btn_catalog"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/catalog"
                android:background="@drawable/btn_design"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_slab_bold"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/lines3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/header_pic"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/main_page_recept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-60dp"
                android:fontFamily="@font/roboto_slab_bold"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/recept"
                android:textColor="@color/red"
                android:textSize="32dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recept_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40sp"/>

            <Button
                android:id="@+id/btn_all_recepts"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_all_recepts"
                android:background="@drawable/btn_design"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_slab_bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/lines4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/header_pic"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-60dp"
                android:fontFamily="@font/roboto_slab_bold"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/contact"
                android:textColor="@color/red"
                android:textSize="32dp" />

            <LinearLayout
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="40dp">

                <ImageView
                    android:id="@+id/phone_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="12dp"/>

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_number"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/whatsapp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/whatsapp_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/whatsapp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="12dp"/>

                <TextView
                    android:id="@+id/whatsapp_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/whatsapp_number"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/telegram"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/telegram_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/telegramm"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="12dp"/>

                <TextView
                    android:id="@+id/telegram_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/telegramm_nic"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/adress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/adress_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/adress"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="12dp"/>

                <TextView
                    android:id="@+id/adress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/adress"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/tabbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:elevation="40dp"
        android:background="@drawable/tabbar_background"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/house"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:paddingVertical="4dp"
            android:paddingHorizontal="11dp"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/house_img"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/red_house"
                android:contentDescription="@string/house"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/house_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/house"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/red"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/catalog"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:paddingVertical="4dp"
            android:paddingHorizontal="11dp"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/catalog_img"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/catalog"
                android:contentDescription="@string/catalog"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/catalog_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/catalog"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cart"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:paddingVertical="4dp"
            android:paddingHorizontal="11dp"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/cart_img"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/cart"
                android:contentDescription="@string/cart"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/cart_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/cart"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recept"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:paddingVertical="4dp"
            android:paddingHorizontal="11dp"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/recept_img"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/recept"
                android:contentDescription="@string/recept"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/recept_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/recept"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:paddingVertical="4dp"
            android:paddingHorizontal="11dp"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/user"
                android:contentDescription="@string/user"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/profile_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/user"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>